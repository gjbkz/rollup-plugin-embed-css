{
    "name": "rollup-plugin-embed-css",
    "version": "0.4.0",
    "description": "Embed CSS into JavaScript",
    "main": "lib/index.js",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "license": "MIT",
    "engines": {
        "node": ">=8"
    },
    "repository": "kei-ito/rollup-plugin-embed-css",
    "scripts": {
        "lint": "eslint lib test",
        "build": "tsc",
        "test": "tap --coverage test/*/test.js",
        "version:changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 0",
        "version:add": "git add .",
        "version": "npm-run-all --sequential version:changelog version:add"
    },
    "dependencies": {
        "@nlib/afs": "^3.10.0",
        "esifycss": "^1.1.2",
        "postcss": "^7.0.17",
        "rollup-pluginutils": "^2.8.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.0.0",
        "@commitlint/config-conventional": "^8.0.0",
        "@nlib/lint": "^3.10.0",
        "conventional-changelog-cli": "^2.0.21",
        "eslint": "^5.16.0",
        "husky": "^2.4.1",
        "lint-staged": "^8.2.1",
        "npm-run-all": "4.1.5",
        "postcss-nested": "4.1.2",
        "rollup": "^1.15.6",
        "rollup-plugin-typescript2": "^0.21.2",
        "tap": "^14.2.3",
        "typescript": "^3.5.2"
    },
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "env": {
            "es6": true,
            "node": true
        },
        "overrides": [
            {
                "files": "lib/index.js",
                "rules": {
                    "global-require": "off",
                    "max-lines-per-function": "off"
                }
            },
            {
                "files": "test/**",
                "rules": {
                    "no-loop-func": "off"
                }
            },
            {
                "files": "*.script.js",
                "env": {
                    "es6": false,
                    "node": false
                },
                "globals": {
                    "self": true
                }
            }
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            ":ignoreModulesAndTests",
            ":unpublishSafe",
            ":semanticPrefixChore",
            ":prNotPending",
            ":prConcurrentLimit10",
            ":prHourlyLimitNone",
            ":label(dependencies)",
            ":automergeMinor"
        ]
    }
}
