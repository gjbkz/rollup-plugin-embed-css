{
    "name": "rollup-plugin-embed-css",
    "version": "1.0.18",
    "description": "Embed CSS into JavaScript",
    "main": "lib/index.js",
    "files": [
        "lib",
        "!*.test.*",
        "!*.map"
    ],
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "license": "Apache-2.0",
    "engines": {
        "node": ">=10"
    },
    "repository": "kei-ito/rollup-plugin-embed-css",
    "scripts": {
        "lint": "eslint --ext .ts src test --ignore-pattern src/index.d.ts",
        "build:tsc": "tsc",
        "build:types": "node -e \"require('fs').copyFileSync('src/index.d.ts','lib/index.d.ts')\"",
        "build": "run-s build:tsc build:types",
        "test": "ts-node test/index.ts",
        "version": "run-s version:changelog version:add",
        "version:changelog": "nlib-changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "dependencies": {
        "@nlib/afs": "^3.17.2",
        "esifycss": "^1.4.24",
        "postcss": "^7.0.35",
        "rollup-pluginutils": "^2.8.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^9.1.2",
        "@nlib/changelog": "^0.1.9",
        "@nlib/lint": "^3.17.2",
        "@nlib/node-net": "^3.17.2",
        "@nlib/nodetool": "^0.1.11",
        "@nlib/remove-sourcemap": "^3.17.4",
        "@rollup/plugin-commonjs": "^15.1.0",
        "@types/connect": "^3.4.33",
        "@types/node": "^14.11.2",
        "@types/selenium-webdriver": "^4.0.9",
        "@types/serve-static": "^1.13.5",
        "@typescript-eslint/eslint-plugin": "^4.3.0",
        "@typescript-eslint/parser": "^3.10.1",
        "connect": "^3.7.0",
        "eslint": "^7.10.0",
        "husky": "^4.3.0",
        "lint-staged": "^10.4.0",
        "npm-run-all": "4.1.5",
        "rollup": "^2.28.2",
        "selenium-webdriver": "^4.0.0-alpha.7",
        "serve-static": "^1.14.1",
        "systemjs": "^6.6.1",
        "ts-node": "^9.0.0",
        "typescript": "^3.9.7"
    },
    "eslintIgnore": [
        "./test/**/*.js"
    ],
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "env": {
            "es6": true,
            "node": true
        },
        "overrides": [
            {
                "files": [
                    "test/**/*.ts",
                    "src/index.d.ts"
                ],
                "parserOptions": {
                    "project": "./tsconfig.base.json"
                }
            },
            {
                "files": [
                    "test/**/*.ts"
                ],
                "rules": {
                    "no-console": "off"
                }
            },
            {
                "files": [
                    "test/util.ts"
                ],
                "rules": {
                    "class-methods-use-this": "off",
                    "@typescript-eslint/no-explicit-any": "off"
                }
            }
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            ":ignoreModulesAndTests",
            ":unpublishSafe",
            ":semanticPrefixChore",
            ":prNotPending",
            ":prConcurrentLimit10",
            ":prHourlyLimitNone",
            ":label(dependencies)",
            ":automergeMinor"
        ]
    }
}
