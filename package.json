{
    "name": "rollup-plugin-embed-css",
    "version": "1.0.25",
    "description": "Embed CSS into JavaScript",
    "main": "lib/index.js",
    "files": [
        "lib",
        "!*.test.*"
    ],
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "license": "Apache-2.0",
    "engines": {
        "node": ">=12"
    },
    "repository": "kei-ito/rollup-plugin-embed-css",
    "scripts": {
        "lint": "eslint --ext .ts src test",
        "build": "run-s build:*",
        "build:tsc": "tsc --project tsconfig.build.json",
        "test": "ts-node test/index.ts",
        "version": "run-s version:*",
        "version:changelog": "npx nlib-changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "dependencies": {
        "esifycss": "1.4.39",
        "postcss": "8.4.20",
        "rollup-pluginutils": "2.8.2"
    },
    "devDependencies": {
        "@nlib/changelog": "0.2.3",
        "@nlib/eslint-config": "3.19.5",
        "@nlib/eslint-plugin": "1.1.1",
        "@nlib/githooks": "0.1.0",
        "@nlib/lint-commit": "0.2.0",
        "@rollup/plugin-commonjs": "22.0.2",
        "@types/connect": "3.4.35",
        "@types/node": "18.11.17",
        "@types/selenium-webdriver": "4.1.9",
        "@types/serve-static": "1.15.0",
        "@typescript-eslint/eslint-plugin": "5.47.0",
        "@typescript-eslint/parser": "5.46.1",
        "connect": "3.7.0",
        "eslint": "8.30.0",
        "lint-staged": "13.1.0",
        "npm-run-all": "4.1.5",
        "rollup": "2.79.1",
        "selenium-webdriver": "4.7.1",
        "serve-static": "1.15.0",
        "systemjs": "6.13.0",
        "ts-node": "10.9.1",
        "typescript": "4.9.4"
    },
    "eslintIgnore": [
        "./test/**/*.js"
    ],
    "eslintConfig": {
        "extends": [
            "@nlib/eslint-config"
        ],
        "env": {
            "es6": true,
            "node": true
        },
        "rules": {
            "@nlib/no-globals": "off"
        },
        "overrides": [
            {
                "files": [
                    "test/**/*.ts"
                ],
                "rules": {
                    "no-lone-blocks": "off",
                    "import/no-relative-parent-imports": "off"
                }
            },
            {
                "files": [
                    "test/**/*.ts"
                ],
                "rules": {
                    "no-console": "off"
                }
            },
            {
                "files": [
                    "test/util.ts"
                ],
                "rules": {
                    "class-methods-use-this": "off",
                    "@typescript-eslint/no-explicit-any": "off"
                }
            }
        ]
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
