{
    "name": "rollup-plugin-embed-css",
    "version": "0.4.0",
    "description": "Embed CSS into JavaScript",
    "main": "lib/index.js",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "license": "MIT",
    "engines": {
        "node": ">=8"
    },
    "repository": "kei-ito/rollup-plugin-embed-css",
    "scripts": {
        "lint": "eslint lib test",
        "test": "tap --coverage test/*/test.js",
        "version:changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 0",
        "version:add": "git add .",
        "version": "npm-run-all --sequential version:changelog version:add"
    },
    "dependencies": {
        "@nlib/afs": "^3.5.0",
        "postcss": "^7.0.14",
        "rollup-pluginutils": "^2.5.0"
    },
    "devDependencies": {
        "@commitlint/cli": "7.5.2",
        "@commitlint/config-conventional": "7.5.0",
        "@nlib/lint": "3.5.0",
        "conventional-changelog-cli": "^2.0.12",
        "eslint": "^5.15.3",
        "husky": "1.3.1",
        "lint-staged": "^8.1.5",
        "npm-run-all": "4.1.5",
        "postcss-nested": "4.1.2",
        "rollup": "1.9.3",
        "rollup-plugin-typescript2": "0.20.1",
        "tap": "^12.6.1",
        "typescript": "^3.3.4000"
    },
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "env": {
            "es6": true,
            "node": true
        },
        "overrides": [
            {
                "files": "lib/index.js",
                "rules": {
                    "global-require": "off",
                    "max-lines-per-function": "off"
                }
            },
            {
                "files": "test/**",
                "rules": {
                    "no-loop-func": "off"
                }
            },
            {
                "files": "*.script.js",
                "env": {
                    "es6": false,
                    "node": false
                },
                "globals": {
                    "self": true
                }
            }
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ]
    },
    "renovate-config": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
