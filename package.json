{
    "name": "rollup-plugin-embed-css",
    "version": "1.0.21",
    "description": "Embed CSS into JavaScript",
    "main": "lib/index.js",
    "files": [
        "lib",
        "!*.test.*",
        "!*.map"
    ],
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "license": "Apache-2.0",
    "engines": {
        "node": ">=10"
    },
    "repository": "kei-ito/rollup-plugin-embed-css",
    "scripts": {
        "lint": "eslint --ext .ts src test --ignore-pattern src/index.d.ts",
        "build:tsc": "tsc",
        "build:types": "node -e \"require('fs').copyFileSync('src/index.d.ts','lib/index.d.ts')\"",
        "build": "run-s build:tsc build:types",
        "test": "ts-node test/index.ts",
        "version": "run-s version:changelog version:add",
        "version:changelog": "nlib-changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "dependencies": {
        "@nlib/afs": "3.17.2",
        "esifycss": "1.4.27",
        "postcss": "8.3.0",
        "rollup-pluginutils": "2.8.2"
    },
    "devDependencies": {
        "@nlib/changelog": "0.1.9",
        "@nlib/eslint-config": "3.17.22",
        "@nlib/lint-commit": "0.1.4",
        "@nlib/node-net": "3.17.2",
        "@nlib/nodetool": "0.1.17",
        "@rollup/plugin-commonjs": "17.1.0",
        "@types/connect": "3.4.34",
        "@types/node": "15.12.1",
        "@types/selenium-webdriver": "4.0.13",
        "@types/serve-static": "1.13.9",
        "@typescript-eslint/eslint-plugin": "4.26.0",
        "@typescript-eslint/parser": "4.26.0",
        "connect": "3.7.0",
        "eslint": "7.27.0",
        "husky": "4.3.8",
        "lint-staged": "11.0.0",
        "npm-run-all": "4.1.5",
        "rollup": "2.50.6",
        "selenium-webdriver": "4.0.0-beta.3",
        "serve-static": "1.14.1",
        "systemjs": "6.9.0",
        "ts-node": "9.1.1",
        "typescript": "4.3.2"
    },
    "eslintIgnore": [
        "./test/**/*.js"
    ],
    "eslintConfig": {
        "extends": [
            "@nlib"
        ],
        "env": {
            "es6": true,
            "node": true
        },
        "rules": {
            "@nlib/no-globals": "off"
        },
        "overrides": [
            {
                "files": [
                    "test/**/*.ts",
                    "src/index.d.ts"
                ],
                "parserOptions": {
                    "project": "./tsconfig.base.json"
                }
            },
            {
                "files": [
                    "test/**/*.ts"
                ],
                "rules": {
                    "no-console": "off"
                }
            },
            {
                "files": [
                    "test/util.ts"
                ],
                "rules": {
                    "class-methods-use-this": "off",
                    "@typescript-eslint/no-explicit-any": "off"
                }
            }
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "nlib-lint-commit --input HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            ":ignoreModulesAndTests",
            ":unpublishSafe",
            ":semanticPrefixChore",
            ":prNotPending",
            ":prConcurrentLimit10",
            ":prHourlyLimitNone",
            ":label(dependencies)",
            ":automergeMinor"
        ]
    }
}
