{
    "name": "rollup-plugin-embed-css",
    "version": "1.0.4",
    "description": "Embed CSS into JavaScript",
    "main": "lib/index.js",
    "files": [
        "lib"
    ],
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "license": "Apache-2.0",
    "engines": {
        "node": ">=8"
    },
    "repository": "kei-ito/rollup-plugin-embed-css",
    "scripts": {
        "lint": "eslint --ext .ts src test --ignore-pattern src/index.d.ts",
        "build:tsc": "tsc",
        "build:types": "cpy src/index.d.ts lib",
        "build": "run-s build:tsc build:types",
        "test": "ava",
        "version:changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 0",
        "version:add": "git add .",
        "version": "npm-run-all --sequential version:changelog version:add"
    },
    "dependencies": {
        "@nlib/afs": "^3.13.3",
        "esifycss": "^1.3.5",
        "postcss": "^7.0.17",
        "rollup-pluginutils": "^2.8.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.1.0",
        "@commitlint/config-conventional": "^8.1.0",
        "@nlib/lint": "^3.13.3",
        "@types/node": "^12.7.4",
        "@typescript-eslint/eslint-plugin": "^2.1.0",
        "@typescript-eslint/parser": "^2.1.0",
        "ava": "^2.3.0",
        "conventional-changelog-cli": "^2.0.23",
        "cpy-cli": "^2.0.0",
        "eslint": "^6.3.0",
        "husky": "^3.0.5",
        "lint-staged": "^9.2.5",
        "npm-run-all": "4.1.5",
        "rollup": "^1.20.3",
        "ts-node": "^8.3.0",
        "typescript": "^3.6.2"
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "test/*/test.ts"
        ]
    },
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "env": {
            "es6": true,
            "node": true
        },
        "overrides": [
            {
                "files": [
                    "test/**/*.ts",
                    "src/index.d.ts"
                ],
                "parserOptions": {
                    "project": "./tsconfig.base.json"
                }
            },
            {
                "files": [
                    "src/index.ts",
                    "test/*/test.ts"
                ],
                "rules": {
                    "max-lines-per-function": "off"
                }
            },
            {
                "files": [
                    "src/EmbedCSSPlugin.ts"
                ],
                "rules": {
                    "class-methods-use-this": "off"
                }
            },
            {
                "files": [
                    "test/util.ts"
                ],
                "rules": {
                    "class-methods-use-this": "off"
                }
            }
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            ":ignoreModulesAndTests",
            ":unpublishSafe",
            ":semanticPrefixChore",
            ":prNotPending",
            ":prConcurrentLimit10",
            ":prHourlyLimitNone",
            ":label(dependencies)",
            ":automergeMinor"
        ]
    }
}
